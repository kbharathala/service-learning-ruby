<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Student ID</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <% if user.unapproved == 0 %>
          <tr>
        <% else %>
          <tr bgcolor="#FFBBBB">
        <% end %>
          <td><%= link_to("#{user.name}", user) %></td>
          <td><%= user.student_id %></td>
          <td><%= user.hours %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
