<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Full Name' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password%>
  </div>
  <% if @user.new_record? %>
    <div class="field">
      <%= f.label :graduatingyear, 'Graduating Year' %><br>
      <%= f.text_field :graduatingyear %>
    </div>
    <div class="field">
      <%= f.label :student_id, 'Student ID' %><br>
      <%= f.text_field :student_id %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Sign up"%>
  </div>
<% end %>
